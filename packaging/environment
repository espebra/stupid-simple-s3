#STUPID_RO_ACCESS_KEY=
#STUPID_RO_SECRET_KEY=

# Read-write credentials (required if no read-only credentials)
STUPID_RW_ACCESS_KEY=your-access-key-here
STUPID_RW_SECRET_KEY=your-secret-key-here

